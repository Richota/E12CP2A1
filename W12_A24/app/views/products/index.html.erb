<p id="notice"><%= notice %></p>

<h1>Productos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Producto</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
      <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Producto', new_product_path, class: 'btn btn-primary' %>
